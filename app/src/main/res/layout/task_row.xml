<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:text="Pójść pobiegać"
            android:textColor="#000000"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task_title" android:textSize="22sp"
            android:gravity="center"/>
    <TextView
            android:text="Group: Activities"
            android:layout_marginRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/additional_info"
            android:textAlignment="textEnd"/>
</LinearLayout>